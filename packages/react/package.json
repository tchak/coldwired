{
  "name": "@coldwired/react",
  "description": "React support for @coldwired",
  "license": "MIT",
  "files": ["dist"],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "type": "module",
  "version": "0.12.2",
  "scripts": {
    "build": "run-s clean build:*",
    "build:vite": "vite build",
    "build:tsc": "tsc --emitDeclarationOnly",
    "dev": "vitest",
    "test": "vitest run",
    "test:webkit": "vitest run --browser.name=webkit",
    "test:firefox": "vitest run --browser.name=firefox",
    "coverage": "vitest run --coverage",
    "lint": "run-s lint:*",
    "lint:types": "tsc --noEmit",
    "lint:js": "eslint . --ext .ts,.tsx",
    "clean": "del dist coverage node_modules/.vite"
  },
  "dependencies": {
    "@coldwired/utils": "^0.12.0"
  },
  "devDependencies": {
    "@coldwired/actions": "*",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "html-entities": "^2.4.0",
    "zod": "^3.23.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@8.15.4",
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-redeclare": "off"
    },
    "overrides": [
      {
        "files": ["vite.config.js", "vitest.config.ts"],
        "env": {
          "node": true
        }
      }
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "npm": {
      "skipChecks": true
    },
    "github": {
      "release": true
    }
  }
}
