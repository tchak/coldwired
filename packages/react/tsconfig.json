{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "target": "ES2019",
    "module": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist/types"
  },
  "include": ["src"]
}
