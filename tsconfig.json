{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "target": "ES2019",
    "module": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"]
}
